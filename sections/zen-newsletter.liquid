<!-- FASE-3B: Newsletter Signup -->
<section class="zen-newsletter" data-section-id="{{ section.id }}">
  <div class="zen-newsletter__inner">
    <span class="zen-newsletter__icon">✉</span>
    <h2 class="zen-newsletter__title">{{ section.settings.heading | default: 'Unisciti al Viaggio' }}</h2>
    <p class="zen-newsletter__text">{{ section.settings.text | default: 'Iscriviti alla newsletter per ricevere guide spirituali, offerte esclusive e il 10% di sconto sul primo ordine.' }}</p>

    {% form 'customer', class: 'zen-newsletter__form' %}
      <input type="hidden" name="contact[tags]" value="newsletter">
      <div class="zen-newsletter__field">
        <input
          type="email"
          name="contact[email]"
          id="zen-newsletter-email-{{ section.id }}"
          placeholder="La tua email"
          required
          autocomplete="email"
          class="zen-newsletter__input"
        >
        <button type="submit" class="zen-newsletter__submit">
          {{ section.settings.button_text | default: 'Iscriviti' }}
        </button>
      </div>
      {% if form.errors %}
        <p class="zen-newsletter__error">{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</p>
      {% endif %}
      {% if form.posted_successfully? %}
        <p class="zen-newsletter__success">✓ Grazie! Controlla la tua email per il codice sconto.</p>
      {% endif %}
    {% endform %}

    <p class="zen-newsletter__disclaimer">{{ section.settings.disclaimer | default: 'Niente spam, solo energia positiva. Puoi cancellarti in qualsiasi momento.' }}</p>
  </div>
</section>

<style>
.zen-newsletter {
  padding: 80px 20px;
  background: rgba(26, 26, 46, 0.4);
  border-top: 1px solid rgba(201, 168, 76, 0.06);
}

.zen-newsletter__inner {
  max-width: 560px;
  margin: 0 auto;
  text-align: center;
}

.zen-newsletter__icon {
  font-size: 24px;
  color: #C9A84C;
  display: block;
  margin-bottom: 16px;
  opacity: 0.6;
}

.zen-newsletter__title {
  font-family: 'Cormorant Garamond', Georgia, serif;
  font-size: clamp(1.8rem, 3.5vw, 2.5rem);
  font-weight: 400;
  color: #E8E8E8;
  margin: 0 0 12px;
}

.zen-newsletter__text {
  font-family: 'Lato', sans-serif;
  font-size: 15px;
  line-height: 1.7;
  color: rgba(232, 232, 232, 0.6);
  margin: 0 0 32px;
}

.zen-newsletter__field {
  display: flex;
  gap: 0;
  max-width: 480px;
  margin: 0 auto;
}

.zen-newsletter__input {
  flex: 1;
  padding: 14px 20px;
  background: rgba(232, 232, 232, 0.06);
  border: 1px solid rgba(232, 232, 232, 0.12);
  border-right: none;
  border-radius: 2px 0 0 2px;
  color: #E8E8E8;
  font-family: 'Lato', sans-serif;
  font-size: 14px;
  outline: none;
  transition: border-color 0.3s ease;
}

.zen-newsletter__input:focus {
  border-color: rgba(201, 168, 76, 0.4);
}

.zen-newsletter__input::placeholder {
  color: rgba(232, 232, 232, 0.3);
}

.zen-newsletter__submit {
  padding: 14px 28px;
  background: #C9A84C;
  color: #0F0F0F;
  border: 2px solid #C9A84C;
  border-radius: 0 2px 2px 0;
  font-family: 'Josefin Sans', sans-serif;
  font-size: 12px;
  font-weight: 600;
  letter-spacing: 1.5px;
  text-transform: uppercase;
  cursor: pointer;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.zen-newsletter__submit:hover {
  background: transparent;
  color: #C9A84C;
}

.zen-newsletter__error {
  margin-top: 12px;
  color: #E53935;
  font-size: 13px;
}

.zen-newsletter__success {
  margin-top: 12px;
  color: #66BB6A;
  font-size: 14px;
}

.zen-newsletter__disclaimer {
  margin-top: 16px;
  font-family: 'Lato', sans-serif;
  font-size: 12px;
  color: rgba(232, 232, 232, 0.3);
}

@media (max-width: 768px) {
  .zen-newsletter { padding: 48px 16px; }
  .zen-newsletter__field { flex-direction: column; gap: 12px; }
  .zen-newsletter__input { border-right: 1px solid rgba(232, 232, 232, 0.12); border-radius: 2px; }
  .zen-newsletter__submit { border-radius: 2px; width: 100%; }
}
</style>

{% schema %}
{
  "name": "Zen Newsletter",
  "settings": [
    { "type": "text", "id": "heading", "label": "Titolo", "default": "Unisciti al Viaggio" },
    { "type": "textarea", "id": "text", "label": "Testo", "default": "Iscriviti alla newsletter per ricevere guide spirituali, offerte esclusive e il 10% di sconto sul primo ordine." },
    { "type": "text", "id": "button_text", "label": "Testo pulsante", "default": "Iscriviti" },
    { "type": "text", "id": "disclaimer", "label": "Disclaimer", "default": "Niente spam, solo energia positiva. Puoi cancellarti in qualsiasi momento." }
  ],
  "presets": [{ "name": "Zen Newsletter" }]
}
{% endschema %}
