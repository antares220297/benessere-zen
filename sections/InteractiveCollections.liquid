class ZenBubbleCollections {
  constructor() {
    this.currentSlide = 0;
    this.activeModal = null;
    this.touchStartX = 0;
    this.touchEndX = 0;
    this.isTransitioning = false;
    this.init();
  }

  init() {
    this.setupEventListeners();
    this.setupLazyLoading();
    this.setupKeyboardNavigation();
  }

  setupEventListeners() {
    // Card clicks - Fixed to properly handle collection handle
    document.querySelectorAll('.zen-bubble-card').forEach(card => {
      card.addEventListener('click', (e) => {
        if (!e.target.closest('.zen-quick-shop-btn')) {
          const collectionHandle = card.dataset.collection;
          if (collectionHandle) {
            this.openModal(collectionHandle);
          }
        }
      });
    });

    // Quick shop button clicks
    document.querySelectorAll('.zen-quick-shop-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        const card = e.target.closest('.zen-bubble-card');
        const collectionHandle = card.dataset.collection;
        if (collectionHandle) {
          this.openModal(collectionHandle);
        }
      });
    });

    // Close buttons
    document.querySelectorAll('.zen-bubble-close').forEach(el => {
      el.addEventListener('click', () => this.closeModal());
    });

    document.querySelectorAll('.zen-bubble-backdrop').forEach(el => {
      el.addEventListener('click', () => this.closeModal());
    });

    // Navigation buttons
    document.querySelectorAll('.zen-nav-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const direction = btn.classList.contains('prev') ? -1 : 1;
        this.changeSlide(direction);
      });
    });

    // Quantity selectors
    document.querySelectorAll('.zen-qty-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        const input = e.target.closest('.zen-quantity-selector').querySelector('.zen-qty-input');
        const currentVal = parseInt(input.value) || 1;
        const maxStock = parseInt(input.dataset.maxStock) || 999;
        
        if (btn.classList.contains('minus') && currentVal > 1) {
          input.value = currentVal - 1;
        } else if (btn.classList.contains('plus') && currentVal < maxStock) {
          input.value = currentVal + 1;
        }
      });
    });

    // Variant selection
    document.querySelectorAll('.zen-variant-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        if (!btn.disabled) {
          const container = btn.closest('.zen-variants');
          container.querySelectorAll('.zen-variant-btn').forEach(b => b.classList.remove('active'));
          btn.classList.add('active');
          
          // Update hidden input, price, and stock
          const variantId = btn.dataset.variantId;
          const price = btn.dataset.price;
          const inventory = btn.dataset.inventory;
          const slide = btn.closest('.zen-product-slide');
          
          const variantInput = slide.querySelector('.zen-variant-input');
          const priceElement = slide.querySelector('.zen-price');
          const stockElement = slide.querySelector('.zen-stock-count');
          const qtyInput = slide.querySelector('.zen-qty-input');
          const urgencyElement = slide.querySelector('.zen-urgency');
          
          if (variantInput) variantInput.value = variantId;
          if (priceElement) priceElement.textContent = price;
          if (stockElement) stockElement.textContent = inventory;
          
          // Update max stock for quantity input
          if (qtyInput) {
            qtyInput.max = inventory;
            qtyInput.dataset.maxStock = inventory;
            
            // Reset quantity to 1 if current value exceeds new max
            if (parseInt(qtyInput.value) > parseInt(inventory)) {
              qtyInput.value = 1;
            }
          }
          
          // Show/hide urgency based on inventory
          if (urgencyElement) {
            if (inventory > 0) {
              urgencyElement.style.display = 'flex';
            } else {
              urgencyElement.style.display = 'none';
            }
          }
        }
      });
    });

    // Add to cart - Enhanced with proper Shopify AJAX
    document.querySelectorAll('.zen-cart-form-modern').forEach(form => {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const button = form.querySelector('.zen-add-to-cart');
        if (button.classList.contains('loading')) return;
        
        button.classList.add('loading');
        
        try {
          const formData = new FormData(form);
          
          const response = await fetch('/cart/add.js', {
            method: 'POST',
            headers: {
              'X-Requested-With': 'XMLHttpRequest'
            },
            body: formData
          });
          
          if (response.ok) {
            // Success feedback
            button.classList.remove('loading');
            button.classList.add('success');
            button.innerHTML = '<span class="btn-content">✓ Aggiunto!</span>';
            
            // Update cart count if you have a cart counter
            if (typeof window.updateCartCount === 'function') {
              window.updateCartCount();
            }
            
            // Dispatch custom event for cart updates
            document.dispatchEvent(new CustomEvent('cart:item-added', {
              detail: {
                variant_id: formData.get('id'),
                quantity: formData.get('quantity')
              }
            }));
            
            setTimeout(() => {
              button.classList.remove('success');
              button.innerHTML = `
                <span class="btn-content">
                  <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M1 1h3l1.68 10.39a1.5 1.5 0 0 0 1.5 1.21h7.58a1.5 1.5 0 0 0 1.5-1.21L18 5H5"/>
                    <circle cx="8" cy="19" r="0.8"/>
                    <circle cx="16" cy="19" r="0.8"/>
                  </svg>
                  <span>Aggiungi al carrello</span>
                </span>
                <span class="btn-loading">
                  <svg class="spinner" width="18" height="18" viewBox="0 0 24 24">
                    <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="3" fill="none" opacity="0.25"/>
                    <path d="M12 2a10 10 0 0 1 10 10" stroke="currentColor" stroke-width="3" fill="none" stroke-linecap="round"/>
                  </svg>
                </span>
              `;
            }, 2000);
          } else {
            throw new Error('Failed to add to cart');
          }
          
        } catch (error) {
          button.classList.remove('loading');
          console.error('Error adding to cart:', error);
          alert('Errore nell\'aggiungere al carrello. Riprova.');
        }
      });
    });

    // Thumbnail clicks
    document.querySelectorAll('.zen-thumbnail').forEach(thumb => {
      thumb.addEventListener('click', (e) => {
        e.preventDefault();
        const mainImage = thumb.closest('.zen-image-gallery').querySelector('.zen-main-image img');
        if (mainImage && thumb.dataset.fullSrc) {
          mainImage.src = thumb.dataset.fullSrc;
          
          // Update active thumbnail
          thumb.closest('.zen-thumbnails').querySelectorAll('.zen-thumbnail').forEach(t => t.classList.remove('active'));
          thumb.classList.add('active');
        }
      });
    });

    // Touch events for mobile swipe
    this.setupTouchEvents();
  }

  setupTouchEvents() {
    const modals = document.querySelectorAll('.zen-bubble-modal');
    modals.forEach(modal => {
      modal.addEventListener('touchstart', (e) => {
        this.touchStartX = e.changedTouches[0].screenX;
      }, { passive: true });

      modal.addEventListener('touchend', (e) => {
        this.touchEndX = e.changedTouches[0].screenX;
        this.handleSwipe();
      }, { passive: true });
    });
  }

  handleSwipe() {
    const swipeThreshold = 50;
    const diff = this.touchStartX - this.touchEndX;

    if (Math.abs(diff) > swipeThreshold) {
      if (diff > 0) {
        this.changeSlide(1); // Swipe left - next
      } else {
        this.changeSlide(-1); // Swipe right - prev
      }
    }
  }

  setupLazyLoading() {
    const imageObserver = new IntersectionObserver((entries, observer) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const img = entry.target;
          if (img.dataset.src) {
            img.src = img.dataset.src;
            img.classList.add('loaded');
            observer.unobserve(img);
          }
        }
      });
    });

    document.querySelectorAll('.zen-lazy-image').forEach(img => {
      imageObserver.observe(img);
    });
  }

  setupKeyboardNavigation() {
    document.addEventListener('keydown', (e) => {
      if (!this.activeModal) return;

      switch(e.key) {
        case 'ArrowLeft':
          e.preventDefault();
          this.changeSlide(-1);
          break;
        case 'ArrowRight':
          e.preventDefault();
          this.changeSlide(1);
          break;
        case 'Escape':
          e.preventDefault();
          this.closeModal();
          break;
      }
    });
  }

  openModal(collectionHandle) {
    const modal = document.getElementById(`bubble-${collectionHandle}`);
    if (!modal) {
      console.error('Modal not found for collection:', collectionHandle);
      return;
    }

    // Close any existing modal first
    if (this.activeModal) {
      this.closeModal();
    }

    this.activeModal = modal;
    modal.classList.add('active');
    document.body.style.overflow = 'hidden';
    
    // Reset to first slide
    this.currentSlide = 0;
    this.updateSlidePosition();
    
    // Focus management for accessibility
    setTimeout(() => {
      const closeBtn = modal.querySelector('.zen-bubble-close');
      if (closeBtn) closeBtn.focus();
    }, 100);
  }

  closeModal() {
    if (!this.activeModal) return;

    this.activeModal.classList.remove('active');
    document.body.style.overflow = '';
    this.activeModal = null;
  }

  changeSlide(direction) {
    if (!this.activeModal || this.isTransitioning) return;

    const slides = this.activeModal.querySelectorAll('.zen-product-slide');
    const totalSlides = slides.length;

    if (totalSlides <= 1) return; // No need to change slides if only one product

    this.isTransitioning = true;
    this.currentSlide += direction;

    if (this.currentSlide >= totalSlides) {
      this.currentSlide = 0;
    } else if (this.currentSlide < 0) {
      this.currentSlide = totalSlides - 1;
    }

    this.updateSlidePosition();
    
    setTimeout(() => {
      this.isTransitioning = false;
    }, 500);
  }

  goToSlide(index) {
    if (!this.activeModal) return;
    
    const slides = this.activeModal.querySelectorAll('.zen-product-slide');
    if (index >= 0 && index < slides.length) {
      this.currentSlide = index;
      this.updateSlidePosition();
    }
  }

  updateSlidePosition() {
    if (!this.activeModal) return;

    const track = this.activeModal.querySelector('.zen-carousel-track');
    const slides = this.activeModal.querySelectorAll('.zen-product-slide');
    const progressFill = this.activeModal.querySelector('.zen-progress-fill');
    const progressText = this.activeModal.querySelector('.zen-progress-text');
    const prevBtn = this.activeModal.querySelector('.zen-nav-btn.prev');
    const nextBtn = this.activeModal.querySelector('.zen-nav-btn.next');

    // Update track transform for slide effect
    if (track) {
      track.style.transform = `translateX(-${this.currentSlide * 100}%)`;
    }

    // Update progress
    if (progressFill && slides.length > 0) {
      const progress = ((this.currentSlide + 1) / slides.length) * 100;
      progressFill.style.width = `${progress}%`;
    }

    if (progressText && slides.length > 0) {
      progressText.textContent = `${this.currentSlide + 1} di ${slides.length}`;
    }

    // Update navigation button states
    if (prevBtn) {
      prevBtn.disabled = slides.length <= 1;
    }
    if (nextBtn) {
      nextBtn.disabled = slides.length <= 1;
    }
  }

  // Utility function to format prices
  formatPrice(cents) {
    return new Intl.NumberFormat('it-IT', {
      style: 'currency',
      currency: 'EUR'
    }).format(cents / 100);
  }

  // Analytics tracking
  trackEvent(action, label, value) {
    if (typeof gtag !== 'undefined') {
      gtag('event', action, {
        event_category: 'Zen Bubble Collections',
        event_label: label,
        value: value
      });
    }
  }
}

// Initialize when DOM is ready
document.addEventListener('DOMContentLoaded', () => {
  window.zenBubbleCollections = new ZenBubbleCollections();
});

// Handle Shopify theme editor events
document.addEventListener('shopify:section:load', () => {
  if (window.zenBubbleCollections) {
    window.zenBubbleCollections = null;
  }
  setTimeout(() => {
    window.zenBubbleCollections = new ZenBubbleCollections();
  }, 100);
});

document.addEventListener('shopify:section:unload', () => {
  if (window.zenBubbleCollections) {
    window.zenBubbleCollections = null;
  }
});
</script>

