{% comment %} 
  Enhanced Zen Bubble Collections Section 
  Luxury Edition - Dark & Gold Theme
  Primary Colors: #C8B89F (Gold), #202020 (Dark Grey)
  Cart Button: #22C55E (Vibrant Green)
  NAVIGATION FIX APPLIED
{% endcomment %}
<div class="zen-collections-container">
  {% if section.settings.section_title %}
    <div class="zen-section-header">
      <h2 class="zen-section-title">{{ section.settings.section_title }}</h2>
      <div class="zen-heading-line"></div>
    </div>
  {% endif %}
  <div class="zen-bubble-wrapper">
  <!-- Collection Cards -->
  {% for block in section.blocks %}
    {% assign collection = collections[block.settings.collection_handle] %}
    {% if collection %}
      <div class="zen-bubble-card" data-collection="{{ collection.handle }}">
        <div class="zen-card-badge">
          {% if block.settings.badge_text %}
            <span class="badge badge-{{ block.settings.badge_type }}">{{ block.settings.badge_text }}</span>
          {% endif %}
        </div>
        
        <div class="zen-card-image-wrapper">
          <img 
            src="{{ collection.image | img_url: '1x1' }}" 
            data-src="{{ collection.image | img_url: 'medium' }}"
            loading="lazy"
            alt="{{ collection.title }}"
            class="zen-lazy-image"
          >
          <div class="zen-card-overlay">
            <button class="zen-quick-shop-btn" aria-label="Esplora {{ collection.title }}">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.35-4.35"></path>
              </svg>
              Esplora
            </button>
          </div>
        </div>
        
        <div class="zen-card-content">
          <h3>{{ collection.title }}</h3>
          <p class="zen-card-count">{{ collection.products_count }} prodotti</p>
        </div>
      </div>

      <!-- Enhanced Modal -->
      <div id="bubble-{{ collection.handle }}" class="zen-bubble-modal" role="dialog" aria-modal="true" aria-labelledby="modal-title-{{ collection.handle }}">
        <div class="zen-bubble-backdrop"></div>
        <div class="zen-bubble-inner">
          <button class="zen-bubble-close" aria-label="Chiudi modal">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="18" y1="6" x2="6" y2="18"></line>
              <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
          </button>
          
          <h2 id="modal-title-{{ collection.handle }}" class="zen-bubble-title">{{ collection.title }}</h2>
          
          <!-- Progress Bar -->
          <div class="zen-progress-wrapper">
            <div class="zen-progress-bar">
              <div class="zen-progress-fill" data-total="{{ collection.products.size }}"></div>
            </div>
            <span class="zen-progress-text">1 di {{ collection.products.size }}</span>
          </div>

          <!-- Enhanced Carousel with Dedicated Navigation Areas -->
          <div class="zen-carousel-layout">
            <!-- Left Navigation Area -->
            <div class="zen-nav-area zen-nav-left">
              <button class="zen-nav-btn prev" aria-label="Prodotto precedente">
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                  <path d="M15 18l-6-6 6-6"/>
                </svg>
              </button>
            </div>
            
            <!-- Main Carousel Content -->
            <div class="zen-carousel-content">
              <div class="zen-carousel" data-collection="{{ collection.handle }}">
                <div class="zen-carousel-track">
                  {% for product in collection.products %}
                    {% assign current_variant = product.selected_or_first_available_variant %}
                    <div class="zen-product-slide" data-product-id="{{ product.id }}" data-slide-index="{{ forloop.index0 }}">
                      <div class="zen-product-columns">
                        <!-- Enhanced Left Column -->
                        <div class="zen-product-left">
                          <div class="zen-image-gallery">
                            <div class="zen-main-image">
                              <img 
                                src="{{ product.featured_image | img_url: '1x1' }}"
                                data-src="{{ product.featured_image | img_url: '600x600' }}"
                                alt="{{ product.title }}"
                                class="zen-lazy-image"
                              >
                              {% if product.compare_at_price > product.price %}
                                <span class="zen-sale-badge">-{{ product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price }}%</span>
                              {% endif %}
                            </div>
                            
                            <!-- Thumbnail Gallery -->
                            {% if product.images.size > 1 %}
                              <div class="zen-thumbnails">
                                {% for image in product.images limit: 4 %}
                                  <img 
                                    src="{{ image | img_url: '100x100' }}"
                                    alt="{{ product.title }} - Immagine {{ forloop.index }}"
                                    class="zen-thumbnail {% if forloop.first %}active{% endif %}"
                                    data-full-src="{{ image | img_url: '600x600' }}"
                                  >
                                {% endfor %}
                              </div>
                            {% endif %}
                          </div>
                          
                          <!-- Social Proof - MOVED HERE -->
                          <div class="zen-social-proof">
                            <div class="zen-buyers">
                              <div class="zen-buyer-avatars">
                                {% for i in (1..3) %}
                                  <div class="zen-avatar" style="background: hsl({{ product.id | modulo: 360 | plus: i | times: 120 }}, 70%, 60%);"></div>
                                {% endfor %}
                              </div>
                              <p><strong>{{ product.id | modulo: 20 | plus: 10 }} persone</strong> hanno acquistato questo prodotto oggi</p>
                            </div>
                          </div>
                        </div>

                        <!-- Enhanced Right Column -->
                        <div class="zen-product-right">
                          <div class="zen-product-header">
                            <h3 class="zen-product-title">{{ product.title | split: ' - ' | first }}</h3>
                            
                            <!-- Reviews -->
                            <div class="zen-reviews">
                              <div class="zen-stars">
                                {% for i in (1..5) %}
                                  <svg width="14" height="14" fill="#C8B89F"><path d="M7 1l2 4 4.5 0.5-3.25 3.25L11 13.5 7 11.5 3 13.5l0.75-4.75L0.5 5.5 5 5l2-4z"/></svg>
                                {% endfor %}
                              </div>
                              <span class="zen-review-count">({{ product.id | modulo: 50 | plus: 20 }} recensioni)</span>
                            </div>
                          </div>

                          <!-- Dynamic Highlights -->
                          {% assign highlight = product.metafields.custom.highlights %}
                          {% if highlight != blank %}
                            <div class="zen-highlight-box zen-animated">
                              <svg class="zen-highlight-icon" width="18" height="18" fill="#C8B89F">
                                <path d="M9 1.5C4.86 1.5 1.5 4.86 1.5 9s3.36 7.5 7.5 7.5 7.5-3.36 7.5-7.5-3.36-7.5-7.5-7.5zm3.15 6.15l-4.05 4.05c-.15.15-.375.225-.525.225s-.375-.075-.525-.225l-1.8-1.8c-.3-.3-.3-.75 0-1.05s.75-.3 1.05 0l1.17 1.17 3.42-3.42c.3-.3.75-.3 1.05 0s.3.75 0 1.05z"/>
                              </svg>
                              <p class="zen-highlight-text">{{ highlight }}</p>
                            </div>
                          {% endif %}

                          <!-- Enhanced Tags - CENTERED -->
                          <div class="zen-product-tags">
                            {% assign traits = product.metafields.custom.product_traits %}
                            {% if traits != blank %}
                              {% for trait in traits.value %}
                                <span class="zen-pill zen-pill-animated">
                                  <span class="zen-pill-dot"></span>
                                  {{ trait }}
                                </span>
                              {% endfor %}
                            {% endif %}
                          </div>

                          <!-- Variant Selector -->
                          {% if product.variants.size > 1 %}
                            <div class="zen-variants">
                              <label class="zen-variant-label">Seleziona variante:</label>
                              <div class="zen-variant-options">
                                {% for variant in product.variants %}
                                  <button 
                                    class="zen-variant-btn {% if forloop.first %}active{% endif %}"
                                    data-variant-id="{{ variant.id }}"
                                    data-price="{{ variant.price | money }}"
                                    data-inventory="{{ variant.inventory_quantity }}"
                                    {% unless variant.available %}disabled{% endunless %}
                                  >
                                    {{ variant.title }}
                                  </button>
                                {% endfor %}
                              </div>
                            </div>
                          {% endif %}

                          <!-- Enhanced Checkout Box -->
                          <div class="zen-checkout-box">
                            <!-- Price Display -->
                            <div class="zen-price-section">
                              <div class="zen-price-wrapper">
                                {% if product.compare_at_price > product.price %}
                                  <span class="zen-price-compare">{{ product.compare_at_price | money }}</span>
                                {% endif %}
                                <span class="zen-price" data-price="{{ product.price }}">{{ product.price | money }}</span>
                                <span class="zen-price-tax">IVA inclusa</span>
                              </div>
                              
                              <!-- Urgency Indicator -->
                              {% if current_variant.inventory_management and current_variant.inventory_quantity > 0 %}
                              <div class="zen-urgency" style="display: flex;">
                                <svg width="12" height="12" fill="#D4C4AF">
                                  <circle cx="6" cy="6" r="5" stroke="#D4C4AF" fill="none"/>
                                  <path d="M6 3v3l1.5 1.5" stroke="#D4C4AF" stroke-width="1.2"/>
                                </svg>
                                <span>Solo <span class="zen-stock-count">{{ current_variant.inventory_quantity }}</span> disponibili!</span>
                              </div>
                              {% else %}
                              <div class="zen-urgency" style="display: none;">
                                <svg width="12" height="12" fill="#D4C4AF">
                                  <circle cx="6" cy="6" r="5" stroke="#D4C4AF" fill="none"/>
                                  <path d="M6 3v3l1.5 1.5" stroke="#D4C4AF" stroke-width="1.2"/>
                                </svg>
                                <span>Solo <span class="zen-stock-count">0</span> disponibili!</span>
                              </div>
                              {% endif %}
                            </div>

                            <!-- Add to Cart Form -->
                            <form method="post" action="/cart/add" class="zen-cart-form-modern">
                              {% assign current_variant = product.selected_or_first_available_variant %}
                              <input type="hidden" name="id" value="{{ current_variant.id }}" class="zen-variant-input" />
                              
                              <div class="zen-cart-controls">
                                <div class="zen-quantity-selector">
                                  <button type="button" class="zen-qty-btn minus" aria-label="Diminuisci quantità">−</button>
                                  {% if current_variant.inventory_management and current_variant.inventory_quantity > 0 %}
                                    <input type="number" name="quantity" value="1" min="1" max="{{ current_variant.inventory_quantity }}" class="zen-qty-input" aria-label="Quantità" data-max-stock="{{ current_variant.inventory_quantity }}">
                                  {% else %}
                                    <input type="number" name="quantity" value="1" min="1" max="999" class="zen-qty-input" aria-label="Quantità" data-max-stock="999">
                                  {% endif %}
                                  <button type="button" class="zen-qty-btn plus" aria-label="Aumenta quantità">+</button>
                                </div>
                                
                                <button type="submit" class="zen-add-to-cart">
                                  <span class="btn-content">
                                  <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M1 1h3l1.68 10.39a1.5 1.5 0 0 0 1.5 1.21h7.58a1.5 1.5 0 0 0 1.5-1.21L18 5H5"/>
                                    <circle cx="8" cy="19" r="0.8"/>
                                    <circle cx="16" cy="19" r="0.8"/>
                                  </svg>
                                    <span>Aggiungi al carrello</span>
                                  </span>
                                  <span class="btn-loading">
                                    <svg class="spinner" width="18" height="18" viewBox="0 0 24 24">
                                      <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="3" fill="none" opacity="0.25"/>
                                      <path d="M12 2a10 10 0 0 1 10 10" stroke="currentColor" stroke-width="3" fill="none" stroke-linecap="round"/>
                                    </svg>
                                  </span>
                                </button>
                              </div>
                            </form>

                            <!-- Enhanced Benefits -->
                            <div class="zen-benefits">
                              <div class="zen-benefit">
                                <div class="zen-benefit-icon">
                                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
                                    <path d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10m-8-14v10l8 4" stroke="#C8B89F" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                  </svg>
                                </div>
                                <span>Spedizione gratuita sopra €50</span>
                              </div>
                              <div class="zen-benefit">
                                <div class="zen-benefit-icon">
                                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
                                    <path d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2z" stroke="#C8B89F" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                    <polyline points="9 22 9 12 15 12 15 22" stroke="#C8B89F" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                  </svg>
                                </div>
                                <span>Reso facile entro 30 giorni</span>
                              </div>
                              <div class="zen-benefit">
                                <div class="zen-benefit-icon">
                                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
                                    <rect x="3" y="7" width="18" height="14" stroke="#C8B89F" stroke-width="1.5" stroke-linejoin="round"/>
                                    <path d="M8 7V4a4 4 0 018 0v3" stroke="#C8B89F" stroke-width="1.5"/>
                                    <circle cx="12" cy="14" r="1" fill="#C8B89F"/>
                                    <path d="M12 15v3" stroke="#C8B89F" stroke-width="1.5"/>
                                  </svg>
                                </div>
                                <span>Pagamento sicuro con:</span>
                              </div>
                              <!-- Enhanced Payment Methods -->
                              <div class="zen-payment-methods">
                                <div class="payment-icon-wrapper">
                                  <img src="https://upload.wikimedia.org/wikipedia/commons/b/b5/PayPal.svg" alt="PayPal" class="payment-logo">
                                </div>
                                <div class="payment-icon-wrapper">
                                  <img src="https://upload.wikimedia.org/wikipedia/commons/2/2a/Mastercard-logo.svg" alt="Mastercard" class="payment-logo">
                                </div>
                                <div class="payment-icon-wrapper">
                                  <img src="https://upload.wikimedia.org/wikipedia/commons/5/5e/Visa_Inc._logo.svg" alt="Visa" class="payment-logo">
                                </div>
                                <div class="payment-icon-wrapper">
                                  <img src="https://upload.wikimedia.org/wikipedia/commons/9/9a/Klarna_Logo_black.svg" alt="Klarna" class="payment-logo">
                                </div>
                                <div class="payment-icon-wrapper">
                                  <img src="https://upload.wikimedia.org/wikipedia/commons/a/a5/Logo_di_Satispay.svg" alt="Satispay" class="payment-logo">
                                </div> 
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                      
                      <!-- Collection Link - Moved outside columns to center it -->
                      <div style="text-align: center; margin-top: 30px;">
                        <a href="{{ collection.url }}" class="zen-collection-link">
                          Esplora tutta la collezione
                          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M5 12h14m-7-7l7 7-7 7"/>
                          </svg>
                        </a>
                      </div>
                    </div>
                  {% endfor %}
                </div>
              </div>
            </div>
            
            <!-- Right Navigation Area -->
            <div class="zen-nav-area zen-nav-right">
              <button class="zen-nav-btn next" aria-label="Prodotto successivo">
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                  <path d="M9 18l6-6-6-6"/>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    {% endif %}
  {% endfor %}
  </div>
</div>

<style>
/* CSS Variables for Luxury Brand */
:root {
  --zen-primary: #C8B89F;
  --zen-primary-dark: #B3A48C;
  --zen-primary-light: #D4C4AF;
  --zen-bg-main: #202020;
  --zen-bg-secondary: #3A3A3A;
  --zen-bg-card: #292929;
  --zen-text-primary: #FFFFFF;
  --zen-text-secondary: #898989;
  --zen-text-light: #C3C3C3;
  --zen-success: #22C55E;
  --zen-warning: #C8B89F;
  --zen-danger: #D4C4AF;
  --zen-cart: #22C55E;
  --zen-cart-hover: #16A34A;
  --zen-border: #5E5E5E;
  --zen-shadow: 0 4px 12px rgba(0,0,0,0.3);
  --zen-shadow-lg: 0 10px 25px rgba(0,0,0,0.4);
  --zen-radius: 16px;
  --zen-transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Global Styles */
* {
  box-sizing: border-box;
}

/* Container */
.zen-collections-container {
  background: var(--zen-bg-main);
}

/* Enhanced Section Header */
.zen-section-header {
  text-align: center;
  margin-bottom: 60px;
  padding-top: 60px;
  position: relative;
}

.zen-subtitle {
  display: inline-block;
  padding: 8px 20px;
  background: rgba(200, 184, 159, 0.1);
  border: 1px solid rgba(200, 184, 159, 0.2);
  border-radius: 30px;
  color: var(--zen-primary);
  font-size: 12px;
  font-weight: 500;
  letter-spacing: 2px;
  text-transform: uppercase;
  margin-bottom: 20px;
  backdrop-filter: blur(10px);
}

.zen-section-title {
  font-size: clamp(36px, 5vw, 56px);
  font-weight: 300;
  letter-spacing: -1px;
  color: var(--zen-primary);
  margin: 0 0 30px;
  line-height: 1.2;
  text-transform: none;
}

.zen-heading-line {
  width: 80px;
  height: 2px;
  background: linear-gradient(90deg, transparent, var(--zen-primary), transparent);
  margin: 0 auto;
  position: relative;
  overflow: hidden;
}

.zen-heading-line::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, #FFFFFF, transparent);
  animation: shimmer 3s infinite;
}

@keyframes shimmer {
  to {
    left: 100%;
  }
}

.zen-bubble-wrapper {
  font-family: 'Noto Sans JP', -apple-system, BlinkMacSystemFont, sans-serif;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 30px;
  padding: 0 20px 60px 20px;
  background: var(--zen-bg-main);
  position: relative;
  justify-content: center;
  max-width: 1200px;
  margin: 0 auto;
}

/* No extra padding when section title is present */
.zen-section-header + .zen-bubble-wrapper {
  padding-top: 0;
}

/* Collection Cards */
.zen-bubble-card {
  background: var(--zen-bg-card);
  background-image: linear-gradient(135deg, rgba(200, 184, 159, 0.03) 0%, transparent 100%);
  border-radius: var(--zen-radius);
  overflow: hidden;
  position: relative;
  cursor: pointer;
  transition: var(--zen-transition);
  box-shadow: var(--zen-shadow);
  border: 1px solid var(--zen-border);
}

.zen-bubble-card:hover {
  transform: translateY(-8px);
  box-shadow: var(--zen-shadow-lg);
  border-color: var(--zen-primary);
}

.zen-card-badge {
  position: absolute;
  top: 16px;
  right: 16px;
  z-index: 10;
}

.badge {
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.badge-new {
  background: var(--zen-primary);
  color: #242424;
}

.badge-sale {
  background: var(--zen-danger);
  color: white;
}

.badge-limited {
  background: var(--zen-warning);
  color: #242424;
}

.zen-card-image-wrapper {
  position: relative;
  aspect-ratio: 1;
  overflow: hidden;
}

.zen-card-image-wrapper img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.zen-bubble-card:hover .zen-card-image-wrapper img {
  transform: scale(1.1);
}

.zen-card-overlay {
  position: absolute;
  inset: 0;
  background: rgba(32,32,32,0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.zen-bubble-card:hover .zen-card-overlay {
  opacity: 1;
}

.zen-quick-shop-btn {
  background: var(--zen-primary);
  color: #242424;
  border: none;
  padding: 12px 24px;
  border-radius: 30px;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 8px;
  cursor: pointer;
  transform: translateY(10px);
  transition: var(--zen-transition);
}

.zen-bubble-card:hover .zen-quick-shop-btn {
  transform: translateY(0);
}

.zen-quick-shop-btn:hover {
  background: var(--zen-primary-dark);
}

.zen-card-content {
  padding: 20px;
  text-align: center;
}

.zen-card-content h3 {
  margin: 0 0 8px;
  font-size: 18px;
  font-weight: 600;
  color: var(--zen-text-primary);
}

.zen-card-count {
  margin: 0;
  color: var(--zen-text-secondary);
  font-size: 14px;
}

/* Modal Styles */
.zen-bubble-modal {
  display: none;
  position: fixed;
  inset: 0;
  z-index: 9999;
  overflow-y: auto;
}

.zen-bubble-modal.active {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30px;
}

.zen-bubble-backdrop {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.9);
  backdrop-filter: blur(8px);
}

.zen-bubble-inner {
  position: relative;
  background: var(--zen-bg-main);
  background-image: 
    radial-gradient(circle at 20% 80%, rgba(200, 184, 159, 0.05) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(200, 184, 159, 0.05) 0%, transparent 50%);
  border-radius: 24px;
  max-width: 1400px;
  width: 100%;
  max-height: 92vh;
  overflow-y: auto;
  overflow-x: hidden;
  padding: 25px 0;
  animation: modalSlideIn 0.3s ease;
  border: 1px solid var(--zen-border);
  box-shadow: 
    0 25px 50px -12px rgba(0, 0, 0, 0.5),
    inset 0 1px 0 0 rgba(200, 184, 159, 0.1);
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.zen-bubble-close {
  position: absolute;
  top: 15px;
  right: 15px;
  background: var(--zen-bg-secondary);
  border: 1px solid var(--zen-border);
  width: 36px;
  height: 36px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: var(--zen-transition);
  z-index: 100;
  color: var(--zen-text-primary);
}

.zen-bubble-close:hover {
