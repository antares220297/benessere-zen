  Zen Why Us Section - Shopify Liquid Template (Fixed Content)
  Compatible with benesserezen.shop design system
  Features: 4 fixed cards with interactive flip animations
{% endcomment %}

<style>
  .zen-why-us {
  background: linear-gradient(135deg, #0F0F0F 0%, #1A1A2E 100%);
  padding: 3rem 0 5rem;
  font-family: 'Cormorant Garamond', Georgia, 'Times New Roman', serif;
  position: relative;
  overflow: hidden;
}
  
  .zen-why-us .zen-container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }
  
  /* Background Effects */
  .zen-why-us .zen-bg-effects {
    position: absolute;
    inset: 0;
    pointer-events: none;
    opacity: 0.4;
  }
  
  .zen-why-us .zen-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    animation: float-orb 25s infinite ease-in-out;
  }
  
  .zen-why-us .zen-orb-1 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(201, 168, 76, 0.3), transparent 70%);
    top: -10%;
    left: -10%;
  }

  .zen-why-us .zen-orb-2 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(201, 168, 76, 0.2), transparent 70%);
    bottom: -10%;
    right: -10%;
    animation-delay: 10s;
  }

  .zen-why-us .zen-orb-3 {
    width: 350px;
    height: 350px;
    background: radial-gradient(circle, rgba(232, 212, 142, 0.2), transparent 70%);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation-delay: 5s;
  }
  
  @keyframes float-orb {
    0%, 100% { transform: translate(0, 0) scale(1); opacity: 0.3; }
    33% { transform: translate(30px, -30px) scale(1.1); opacity: 0.5; }
    66% { transform: translate(-20px, 20px) scale(0.95); opacity: 0.4; }
  }
  
  /* Particles */
  .zen-why-us .zen-particles {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }
  
  .zen-why-us .zen-particle {
    position: absolute;
    width: 2px;
    height: 2px;
    background: #C9A84C;
    border-radius: 50%;
    opacity: 0;
    animation: sparkle 10s infinite linear;
  }
  
  @keyframes sparkle {
    0%, 100% { opacity: 0; transform: translateY(0) scale(0); }
    10% { opacity: 1; transform: translateY(-20vh) scale(1); }
    90% { opacity: 1; transform: translateY(-80vh) scale(1); }
  }
  
  /* Header */
  .zen-why-us .zen-section-header {
    text-align: center;
    margin-bottom: 60px;
    animation: fade-in-down 1s ease-out;
  }
  
  @keyframes fade-in-down {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .zen-why-us .zen-title {
    font-family: 'Cormorant Garamond', Georgia, 'Times New Roman', serif;
    font-size: clamp(32px, 5vw, 48px);
    font-weight: 600;
    color: #C9A84C;
    margin-bottom: 20px;
    line-height: 1.2;
  }
  
  .zen-why-us .zen-divider {
    width: 80px;
    height: 4px;
    background: linear-gradient(to right, #C9A84C, #E8D48E);
    margin: 0 auto;
    border-radius: 999px;
    animation: glow-line 3s infinite;
  }

  @keyframes glow-line {
    0%, 100% { opacity: 0.8; width: 80px; box-shadow: 0 0 20px rgba(201, 168, 76, 0.3); }
    50% { opacity: 1; width: 120px; box-shadow: 0 0 30px rgba(201, 168, 76, 0.3); }
  }
  
  /* Throat Chakra Icon */
  .zen-why-us .zen-throat-chakra-icon {
    display: flex;
    justify-content: center;
    margin: 1rem auto 2rem;
    opacity: 0.3;
    color: #C9A84C;
  }

  .zen-why-us .zen-throat-chakra-icon img {
    width: 2rem;
    height: 2rem;
    animation: gentle-pulse 4s infinite;
    filter: hue-rotate(200deg) saturate(1.2);
  }

  @keyframes gentle-pulse {
    0%, 100% { 
      opacity: 0.2; 
      transform: scale(1);
    }
    50% { 
      opacity: 0.4; 
      transform: scale(1.05);
    }
  }
  
  /* Cards Grid */
  .zen-why-us .zen-cards-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
    max-width: 1400px;
    margin: 0 auto;
  }
  
  /* Card Structure */
  .zen-why-us .zen-card {
    position: relative;
    height: 400px;
    cursor: pointer;
    perspective: 1000px;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    touch-action: manipulation;
    border-radius: 24px;
  }
  
  .zen-why-us .zen-card:hover {
    transform: translateY(-8px);
  }
  
  .zen-why-us .zen-card:focus {
    outline: 3px solid #C9A84C;
    outline-offset: 4px;
  }
  
  .zen-why-us .zen-card.is-flipped {
    z-index: 10;
  }
  
  .zen-why-us .zen-card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    transform-style: preserve-3d;
  }
  
  .zen-why-us .zen-card.is-flipped .zen-card-inner {
    transform: rotateY(180deg);
  }
  
  .zen-why-us .zen-card-face {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    border-radius: 24px;
  }
  
  .zen-why-us .zen-card-front {
    z-index: 2;
  }
  
  .zen-why-us .zen-card-back {
    transform: rotateY(180deg);
    z-index: 1;
  }
  
  /* Card Content */
  .zen-why-us .zen-card-content {
    position: relative;
    height: 100%;
    padding: 40px 30px;
    background: #1A1A2E;
    border-radius: 24px;
    border: 1px solid rgba(201, 168, 76, 0.15);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    overflow: hidden;
    backdrop-filter: blur(10px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .zen-why-us .zen-card:hover .zen-card-content {
    border-color: rgba(201, 168, 76, 0.4);
    box-shadow: 0 12px 40px rgba(201, 168, 76, 0.15);
  }
  
  .zen-why-us .zen-card-back .zen-card-content {
    background: linear-gradient(135deg, #1A1A2E, #222240);
    border-color: #C9A84C;
    justify-content: flex-start; /* invece che stretch */
    padding-top: 25px;  /* meno aria sopra */
    padding-bottom: 30px; /* pi√π aria sotto */
}

.zen-why-us .zen-card-back .zen-features-list {
  margin-top: 10px;   /* riduce spazio dal titolo */
  margin-bottom: 15px; /* pi√π aria prima della citazione */
}
  
  /* Icon Styling */
  .zen-why-us .zen-icon-box {
    position: relative;
    width: 80px;
    height: 80px;
    margin-bottom: 25px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .zen-why-us .zen-icon-sphere {
    position: absolute;
    inset: 0;
    border-radius: 50%;
    background: radial-gradient(circle at 30% 30%, rgba(201, 168, 76, 0.25), rgba(201, 168, 76, 0.08));
    border: 1.5px solid rgba(201, 168, 76, 0.2);
    box-shadow: 0 0 40px rgba(201, 168, 76, 0.2), inset 0 0 25px rgba(201, 168, 76, 0.1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .zen-why-us .zen-card:hover .zen-icon-sphere {
    animation: iconPulse 2s infinite;
    border-color: rgba(201, 168, 76, 0.4);
  }

  @keyframes iconPulse {
    0%, 100% {
      transform: scale(1);
      box-shadow: 0 0 40px rgba(201, 168, 76, 0.2), inset 0 0 25px rgba(201, 168, 76, 0.1);
    }
    50% {
      transform: scale(1.1);
      box-shadow: 0 0 60px rgba(201, 168, 76, 0.3), inset 0 0 35px rgba(201, 168, 76, 0.15);
    }
  }
  
  .zen-why-us .zen-icon {
    width: 50px;
    height: 50px;
    object-fit: contain;
    transition: transform 0.3s, filter 0.3s;
    position: relative;
    z-index: 2;
  }
  
  .zen-why-us .zen-card:hover .zen-icon {
    transform: scale(1.1);
  }
  
  /* Typography: titoli delle card NON tagliati */
.zen-why-us .zen-card-title{
  font-family: 'Cormorant Garamond', Georgia, 'Times New Roman', serif;
  font-size: clamp(16px, 1.4vw, 18px);
  font-weight: 600;
  color: #E8E8E8;
  margin-bottom: 15px;
  line-height: 1.2;

  /* üëâ niente ellissi: permetti a capo su due righe */
  white-space: normal;
  overflow: visible;
  text-overflow: clip;

  /* allinea l‚Äôaltezza tra le card: riserva spazio per 2 righe */
  min-height: 2.4em; /* 2 righe con line-height:1.2 */
  max-width: 100%;
}
  
  .zen-why-us .zen-card-text {
    font-size: clamp(12px, 1.1vw, 14px);
    line-height: 1.5;
    color: rgba(232, 232, 232, 0.7);
    margin-bottom: 20px;
    flex-grow: 1;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  /* Back card title styling */
  .zen-why-us .zen-card-back .zen-card-title {
    font-size: clamp(18px, 2.2vw, 20px);
    font-weight: 500;
    letter-spacing: 0.4px;
    line-height: 1.25;
    margin: 0 0 18px;
    background: linear-gradient(135deg, #C9A84C 0%, #E8D48E 50%, #C9A84C 100%);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    filter: drop-shadow(0 4px 14px rgba(201, 168, 76, 0.18));
  }
  
  /* Features List */
  .zen-why-us .zen-features-list {
    width: 100%;
    list-style: none;
    margin: 20px 0;
    text-align: left;
  }
  
  .zen-why-us .zen-features-list li {
    padding: 12px 0;
    color: #E8E8E8;
    font-size: 14px;
    display: flex;
    align-items: center;
    gap: 12px;
    border-bottom: 1px solid rgba(201, 168, 76, 0.15);
    transition: all 0.2s ease;
  }

  .zen-why-us .zen-features-list li:hover {
    transform: translateX(5px);
    color: #C9A84C;
    border-bottom-color: #C9A84C;
  }
  
  .zen-why-us .zen-check {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: linear-gradient(135deg, #C9A84C, #E8D48E);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    box-shadow: 0 2px 8px rgba(201, 168, 76, 0.3);
  }
  
  .zen-why-us .zen-check::after {
    content: '‚úì';
    color: white;
    font-size: 12px;
    font-weight: bold;
  }
  
  .zen-why-us .zen-quote {
    margin-top: auto;
    padding-top: 15px;
    border-top: 1px solid rgba(201, 168, 76, 0.15);
    font-style: italic;
    font-size: 13px;
    color: #C9A84C;
    opacity: 0.9;
    text-align: center;
  }
  
  /* Hint Button */
  .zen-why-us .zen-hint {
    position: absolute;
    bottom: 15px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 8px 12px;
    background: linear-gradient(135deg, #C9A84C, #E8D48E);
    color: #0F0F0F;
    border-radius: 20px;
    font-size: 11px;
    font-weight: 500;
    opacity: 0.9;
    animation: hint-pulse 2s infinite;
    box-shadow: 0 4px 12px rgba(201, 168, 76, 0.3);
  }
  
  @keyframes hint-pulse {
    0%, 100% { transform: translateX(-50%) scale(1); opacity: 0.9; }
    50% { transform: translateX(-50%) scale(1.05); opacity: 1; }
  }
  
  .zen-why-us .zen-hint-icon {
    width: 14px;
    height: 14px;
  }
  
  /* Responsive Design */
  @media (max-width: 1200px) and (min-width: 769px) {
    .zen-why-us .zen-cards-grid {
      gap: 20px;
      max-width: 1200px;
    }
  }
  
  @media (max-width: 768px) {
    .zen-why-us {
      padding: 3rem 15px 40px;
    }
    
    .zen-why-us .zen-section-header {
      margin-bottom: 40px;
    }
    
    .zen-why-us .zen-title {
      font-size: 28px;
    }
    
    .zen-why-us .zen-cards-grid {
      grid-template-columns: 1fr;
      gap: 24px;
      justify-items: center;
      max-width: 520px;
    }
    
    .zen-why-us .zen-card {
      width: min(520px, 90vw);
      height: 380px;
    }
    
    .zen-why-us .zen-card-content {
      padding: 28px 22px;
    }
    
    .zen-why-us .zen-icon-box {
      width: 70px;
      height: 70px;
      margin-bottom: 20px;
    }
    
    .zen-why-us .zen-icon {
      width: 40px;
      height: 40px;
    }
    
    .zen-why-us .zen-card-title {
      font-size: 18px;
    }
    
    .zen-why-us .zen-card-text,
    .zen-why-us .zen-features-list li {
      font-size: 13px;
    }
    
    .zen-why-us .zen-hint {
      font-size: 10px;
      padding: 6px 10px;
    }
    
    .zen-why-us .zen-orb {
      animation: none;
      opacity: 0.2;
    }
    
    .zen-why-us .zen-particle {
      display: none;
    }
  }
  
  @media (max-width: 480px) {
    .zen-why-us .zen-card {
      width: 94vw;
    }
  }
  
  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    .zen-why-us *,
    .zen-why-us *::before,
    .zen-why-us *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
  
  /* Touch device optimizations */
  @media (hover: none) and (pointer: coarse) {
    .zen-why-us .zen-card-content {
      backdrop-filter: none;
      -webkit-backdrop-filter: none;
    }
    
    .zen-why-us .zen-card:hover {
      transform: none;
    }
    
    .zen-why-us .zen-particle:nth-child(n+10) {
      display: none;
    }
  }
  
  /* Screen reader only */
  .zen-why-us .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

/* Throat Chakra icon gold tone */
.zen-why-us .zen-throat-chakra-icon img {
  filter: brightness(0) saturate(100%)
          invert(72%) sepia(30%) saturate(600%)
          hue-rotate(10deg) brightness(95%) contrast(90%) !important;
}



</style>

