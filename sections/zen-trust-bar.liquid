<!-- FASE-3A: Trust Bar -->
<section class="zen-trust-bar" data-section-id="{{ section.id }}">
  <div class="zen-trust-bar__inner">
    <div class="zen-trust-bar__item">
      <span class="zen-trust-bar__icon">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="#C9A84C" stroke="none" aria-hidden="true">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
      </span>
      <span class="zen-trust-bar__text">{{ section.settings.text_1 | default: 'Selezionato con cura' }}</span>
    </div>
    <div class="zen-trust-bar__item">
      <span class="zen-trust-bar__icon">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="#C9A84C" stroke="none" aria-hidden="true">
          <path d="M17 8C8 10 5.9 16.17 3.82 21.34l1.89.66.95-2.3c.48.17.98.3 1.34.3C19 20 22 3 22 3c-1 2-8 2.25-13 3.25S2 11.5 2 13.5s1.75 3.75 1.75 3.75C7 8 17 8 17 8z"/>
        </svg>
      </span>
      <span class="zen-trust-bar__text">{{ section.settings.text_2 | default: '100% Naturale' }}</span>
    </div>
    <div class="zen-trust-bar__item">
      <span class="zen-trust-bar__icon">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#C9A84C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <rect x="1" y="6" width="15" height="13" rx="1"/><polyline points="16 10 21 10 23 13 23 19 19 19"/><polyline points="1 19 5 19"/><circle cx="7" cy="19" r="2"/><circle cx="19" cy="19" r="2"/><line x1="9" y1="19" x2="17" y2="19"/>
        </svg>
      </span>
      <span class="zen-trust-bar__text">{{ section.settings.text_3 | default: 'Spedizione 24-48h' }}</span>
    </div>
    <div class="zen-trust-bar__item">
      <span class="zen-trust-bar__icon">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#C9A84C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <polyline points="1 4 1 10 7 10"/><polyline points="23 20 23 14 17 14"/><path d="M20.49 9A9 9 0 0 0 5.64 5.64L1 10m22 4l-4.64 4.36A9 9 0 0 1 3.51 15"/>
        </svg>
      </span>
      <span class="zen-trust-bar__text">{{ section.settings.text_4 | default: 'Reso facile 14 giorni' }}</span>
    </div>
  </div>
</section>

<style>
.zen-trust-bar {
  background: #1A1A2E;
  padding: 20px 0;
  border-top: 1px solid rgba(201, 168, 76, 0.1);
  border-bottom: 1px solid rgba(201, 168, 76, 0.1);
}

.zen-trust-bar__inner {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  gap: 16px;
}

.zen-trust-bar__item {
  display: flex;
  align-items: center;
  gap: 10px;
  white-space: nowrap;
}

.zen-trust-bar__icon {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.zen-trust-bar__text {
  font-family: 'Josefin Sans', 'Lato', sans-serif;
  font-size: 12px;
  font-weight: 400;
  letter-spacing: 1px;
  text-transform: uppercase;
  color: #E8E8E8;
}

@media (max-width: 768px) {
  .zen-trust-bar__inner {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 16px;
    justify-items: center;
  }

  .zen-trust-bar__text {
    font-size: 11px;
  }
}
</style>

{% schema %}
{
  "name": "Zen Trust Bar",
  "settings": [
    { "type": "text", "id": "text_1", "label": "Testo 1", "default": "4.8/5 dai nostri clienti" },
    { "type": "text", "id": "text_2", "label": "Testo 2", "default": "100% Naturale" },
    { "type": "text", "id": "text_3", "label": "Testo 3", "default": "Spedizione 24-48h" },
    { "type": "text", "id": "text_4", "label": "Testo 4", "default": "Reso facile 14 giorni" }
  ],
  "presets": [{ "name": "Zen Trust Bar" }]
}
{% endschema %}
