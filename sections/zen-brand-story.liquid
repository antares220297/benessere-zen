<!-- FASE-3B: Brand Story -->
<section class="zen-story" data-section-id="{{ section.id }}">
  <div class="zen-story__inner">
    <div class="zen-story__media">
      {% if section.settings.image != blank %}
        <img
          src="{{ section.settings.image | image_url: width: 800 }}"
          alt="{{ section.settings.image_alt | default: 'Benessere Zen' }}"
          loading="lazy"
          class="zen-story__img"
        >
      {% else %}
        <div class="zen-story__placeholder">
          <span>✦</span>
        </div>
      {% endif %}
    </div>
    <div class="zen-story__content">
      <span class="zen-story__eyebrow">{{ section.settings.eyebrow | default: 'La Nostra Storia' }}</span>
      <h2 class="zen-story__title">{{ section.settings.heading | default: 'Benessere Zen' }}</h2>
      <div class="zen-story__text rte">
        {{ section.settings.text | default: '<p>Benessere Zen nasce dalla passione per il benessere spirituale e la ricerca interiore. Ogni prodotto che selezioniamo è scelto con cura per accompagnarti nel tuo viaggio verso l&rsquo;equilibrio.</p><p>Crediamo che il benessere autentico nasca dall&rsquo;armonia tra corpo, mente e spirito. Per questo curiamo ogni dettaglio: dalla selezione dei cristalli alla qualità degli incensi, dalla purezza dei tè alle proprietà dei nostri oli essenziali.</p>' }}
      </div>
      <a href="{{ section.settings.cta_link | default: '/pages/chi-siamo' }}" class="zen-story__cta">
        {{ section.settings.cta_text | default: 'Scopri di più su di noi →' }}
      </a>
    </div>
  </div>
</section>

<style>
.zen-story {
  padding: 80px 20px;
  max-width: 1200px;
  margin: 0 auto;
}

.zen-story__inner {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 60px;
  align-items: center;
}

.zen-story__img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 4px;
  aspect-ratio: 3 / 4;
}

.zen-story__placeholder {
  aspect-ratio: 3 / 4;
  background: linear-gradient(135deg, #1A1A2E, #16213E);
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 3rem;
  color: #C9A84C;
  opacity: 0.3;
}

.zen-story__eyebrow {
  font-family: 'Josefin Sans', sans-serif;
  font-size: 11px;
  letter-spacing: 3px;
  text-transform: uppercase;
  color: #C9A84C;
  display: block;
  margin-bottom: 16px;
}

.zen-story__title {
  font-family: 'Cormorant Garamond', Georgia, serif;
  font-size: clamp(2rem, 4vw, 3rem);
  font-weight: 400;
  color: #E8E8E8;
  margin: 0 0 24px;
}

.zen-story__text {
  font-family: 'Lato', sans-serif;
  font-size: 15px;
  line-height: 1.8;
  color: rgba(232, 232, 232, 0.7);
  margin-bottom: 32px;
}

.zen-story__text p { margin-bottom: 16px; }
.zen-story__text p:last-child { margin-bottom: 0; }

.zen-story__cta {
  font-family: 'Josefin Sans', sans-serif;
  font-size: 13px;
  letter-spacing: 1.5px;
  text-transform: uppercase;
  color: #C9A84C;
  text-decoration: none;
  transition: letter-spacing 0.3s ease;
}

.zen-story__cta:hover { letter-spacing: 3px; }

@media (max-width: 768px) {
  .zen-story { padding: 48px 16px; }
  .zen-story__inner { grid-template-columns: 1fr; gap: 32px; }
  .zen-story__img { aspect-ratio: 16 / 9; }
}
</style>

{% schema %}
{
  "name": "Zen Brand Story",
  "settings": [
    { "type": "image_picker", "id": "image", "label": "Immagine" },
    { "type": "text", "id": "image_alt", "label": "Alt text immagine" },
    { "type": "text", "id": "eyebrow", "label": "Etichetta", "default": "La Nostra Storia" },
    { "type": "text", "id": "heading", "label": "Titolo", "default": "Benessere Zen" },
    { "type": "richtext", "id": "text", "label": "Testo" },
    { "type": "text", "id": "cta_text", "label": "Testo CTA", "default": "Scopri di più su di noi →" },
    { "type": "url", "id": "cta_link", "label": "Link CTA" }
  ],
  "presets": [{ "name": "Zen Brand Story" }]
}
{% endschema %}
