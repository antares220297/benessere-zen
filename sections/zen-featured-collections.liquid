<!-- FASE-3A: Collezioni in Evidenza -->
<section class="zen-feat-coll" data-section-id="{{ section.id }}">
  <div class="zen-feat-coll__header">
    <h2 class="zen-feat-coll__title">{{ section.settings.heading | default: 'Esplora le Collezioni' }}</h2>
    {% if section.settings.subheading != blank %}
      <p class="zen-feat-coll__subtitle">{{ section.settings.subheading }}</p>
    {% endif %}
  </div>
  <div class="zen-feat-coll__grid">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link | default: '#' }}" class="zen-feat-coll__card" {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
          <img
            src="{{ block.settings.image | image_url: width: 800 }}"
            alt="{{ block.settings.title | escape }}"
            loading="lazy"
            class="zen-feat-coll__img"
          >
        {% else %}
          <div class="zen-feat-coll__placeholder"></div>
        {% endif %}
        <div class="zen-feat-coll__overlay">
          <h3 class="zen-feat-coll__card-title">{{ block.settings.title }}</h3>
          <span class="zen-feat-coll__card-link">Esplora →</span>
        </div>
      </a>
    {% endfor %}
  </div>
</section>

<style>
.zen-feat-coll {
  padding: 60px 0;
  max-width: 1200px;
  margin: 0 auto;
  padding-left: 20px;
  padding-right: 20px;
}

.zen-feat-coll__header {
  text-align: center;
  margin-bottom: 40px;
}

.zen-feat-coll__title {
  font-family: 'Cormorant Garamond', Georgia, serif;
  font-size: clamp(1.8rem, 3vw, 2.5rem);
  font-weight: 400;
  color: #E8E8E8;
  margin: 0 0 8px;
}

.zen-feat-coll__subtitle {
  font-family: 'Lato', sans-serif;
  font-size: 15px;
  color: rgba(232, 232, 232, 0.6);
  margin: 0;
}

.zen-feat-coll__grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16px;
}

.zen-feat-coll__card {
  position: relative;
  aspect-ratio: 16 / 9;
  border-radius: 4px;
  overflow: hidden;
  text-decoration: none;
  display: block;
}

.zen-feat-coll__img,
.zen-feat-coll__placeholder {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.6s ease;
}

.zen-feat-coll__placeholder {
  background: linear-gradient(135deg, #1A1A2E, #16213E);
}

.zen-feat-coll__card:hover .zen-feat-coll__img {
  transform: scale(1.05);
}

.zen-feat-coll__overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(transparent 40%, rgba(15, 15, 15, 0.85) 100%);
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding: 24px;
}

.zen-feat-coll__card-title {
  font-family: 'Cormorant Garamond', Georgia, serif;
  font-size: clamp(1.3rem, 2.5vw, 1.8rem);
  font-weight: 500;
  color: #E8E8E8;
  margin: 0 0 4px;
}

.zen-feat-coll__card-link {
  font-family: 'Josefin Sans', sans-serif;
  font-size: 12px;
  letter-spacing: 1.5px;
  text-transform: uppercase;
  color: #C9A84C;
  transition: letter-spacing 0.3s ease;
}

.zen-feat-coll__card:hover .zen-feat-coll__card-link {
  letter-spacing: 3px;
}

@media (max-width: 768px) {
  .zen-feat-coll__grid {
    grid-template-columns: 1fr;
  }

  .zen-feat-coll__card {
    aspect-ratio: 4 / 3;
  }

  .zen-feat-coll { padding: 40px 16px; }
}
</style>

{% schema %}
{
  "name": "Zen Featured Collections",
  "settings": [
    { "type": "text", "id": "heading", "label": "Titolo sezione", "default": "Esplora le Collezioni" },
    { "type": "text", "id": "subheading", "label": "Sottotitolo", "default": "Strumenti selezionati per il tuo viaggio interiore" }
  ],
  "blocks": [
    {
      "type": "collection_card",
      "name": "Collezione",
      "limit": 6,
      "settings": [
        { "type": "text", "id": "title", "label": "Titolo", "default": "Collezione" },
        { "type": "url", "id": "link", "label": "Link" },
        { "type": "image_picker", "id": "image", "label": "Immagine di sfondo" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Zen Featured Collections",
      "blocks": [
        { "type": "collection_card", "settings": { "title": "Cristalli & Pietre" } },
        { "type": "collection_card", "settings": { "title": "Incensi & Purificazione" } },
        { "type": "collection_card", "settings": { "title": "Tè & Infusi" } },
        { "type": "collection_card", "settings": { "title": "Meditazione" } }
      ]
    }
  ]
}
{% endschema %}
